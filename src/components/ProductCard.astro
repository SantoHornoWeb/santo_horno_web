---
export interface Props {
  name: string;
  image: string;
  size: string;
  description?: string;
  descriptionItems?: string[];
  lockTitleHeight?: boolean | number;
  category?: string;
}

const {
  name,
  image,
  size,
  description,
  descriptionItems,
  lockTitleHeight = false,
  category
} = Astro.props;

const titleMinHeight =
  typeof lockTitleHeight === 'number'
    ? lockTitleHeight
    : lockTitleHeight
      ? 2.5
      : null;

const titleClassList = ['product-name', titleMinHeight && 'product-name--fixed'].filter(Boolean);
const titleStyle = titleMinHeight ? `--product-name-min-height: ${titleMinHeight}rem;` : undefined;
---

<article class="product-card hover-lift fade-in">
  <div class="product-image">
    <img src={image} alt={name} loading="lazy" />
  </div>
  
  <div class="product-content">
    <h3 class:list={titleClassList} style={titleStyle}>{name}</h3>
    <p class="product-size">{size}</p>
    {descriptionItems && descriptionItems.length > 0 ? (
      <ul class="product-description-list">
        {descriptionItems.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    ) : (
      description && <p class="product-description">{description}</p>
    )}
  
  </div>
</article>

<style>
  .product-card {
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    align-self: start;
  }

  .product-card:hover {
    box-shadow: var(--shadow-lg);
  }

  .product-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .product-category {
    position: absolute;
    top: var(--spacing-sm);
    left: var(--spacing-sm);
    background: var(--color-secondary);
    color: var(--color-white);
    padding: 0.25rem 0.5rem;
    border-radius: var(--border-radius);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .product-content {
    padding: var(--spacing-md);
    display: flex;
    height: 245px;
    flex-direction: column;
  }

  .product-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    max-width: 190px;
  }

  .product-name--fixed {
    min-height: var(--product-name-min-height, 2.5rem);
    display: flex;
    align-items: flex-start;
  }

  .product-size {
    color: var(--color-secondary);
    font-weight: 500;
    margin-bottom: var(--spacing-sm);
    font-size: 0.9rem;
  }

  .product-description {
    color: rgb(68, 67, 67);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: var(--spacing-md);
  }

  .product-description-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-md);
    color: rgb(68, 67, 67);
    font-size: 0.9rem;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .product-description-list li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .product-description-list li::before {
    content: '';
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--color-secondary);
    box-shadow: 0 0 0 2px rgba(202, 138, 73, 0.25);
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .product-card{
      flex-direction: column;
      /* height: 460px; */
      width: 60%;
      margin: 0 auto;
    }
    
    .product-image {
      height: 200px;
    }
    
    .product-content {
      padding: var(--spacing-sm);
      height: auto;
    }

    .product-name--fixed{
      min-height: auto;
      height: auto;
    }

    .product-name {
      max-width: none;
    }
    
  }


  @media (max-width: 480px) {
    .product-card{
      width: 80%;
    }

    .product-image {
      height: 250px;
    }

    .product-name {
      max-width: none;
    }

    .product-image {
      height: none;
    }

    .product-name--fixed{
      min-height: auto;
      height: auto;
    }
    
    .product-content {
      padding: var(--spacing-sm);
      height: auto;
    }
  }
</style>
