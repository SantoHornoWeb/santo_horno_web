<style>
  .footer {
    background: var(--color-dark);
    color: var(--color-white);
    padding: var(--spacing-xl) 0 var(--spacing-md);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  .footer-section h4 {
    color: var(--color-secondary);
    margin-bottom: var(--spacing-sm);
    font-size: 1.2rem;
    font-weight: 600;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: var(--spacing-sm);
  }

  .footer-logo img {
    border-radius: 50%;
  }

  .footer-logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1;
  }

  .footer-logo-text .logo-script {
    font-size: 1.5rem;
    color: var(--color-white);
    font-weight: normal;
    margin-bottom: -0.2rem;
  }

  .footer-subtitle {
    font-size: 0.6rem;
    color: var(--color-secondary);
    letter-spacing: 1.5px;
    font-weight: 600;
  }

  .footer-desc {
    color: #ccc;
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
  }

  .social-links {
    display: flex;
    gap: var(--spacing-sm);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--color-white);
    transition: var(--transition);
  }

  .social-link:hover {
    background: var(--color-secondary);
    transform: translateY(-2px);
    color: var(--color-white);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: #ccc;
    text-decoration: none;
    transition: var(--transition);
    font-family: var(--font-body);
  }

  .footer-links a:hover {
    color: var(--color-secondary);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #ccc;
  }

  .contact-item svg {
    color: var(--color-secondary);
    flex-shrink: 0;
  }

  .payment-methods {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .payment-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #ccc;
  }

  .payment-item svg {
    color: var(--color-secondary);
    flex-shrink: 0;
  }

  .footer-bottom {
    margin-top: var(--spacing-lg);
  }

  .footer-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin-bottom: var(--spacing-md);
  }

  .footer-bottom p {
    text-align: center;
    color: #ccc;
    margin: 0;
    font-family: var(--font-body);
  }

  .contact-details-footer{
    display: flex;
    flex-direction: column;
  }


  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    

    .payment-methods,
    .contact-info {
      align-items: center;
      text-align: center;
    }

    .footer-logo {
      justify-content: center;
    }

    .contact-info{
      align-items: start;
    }

    .payment-methods{
      align-items: start;
    }
  
    .social-links{

    }
  }
</style>